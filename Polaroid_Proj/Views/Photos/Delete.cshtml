@model Polaroid_Proj.Models.Gallery.PhotoModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content" style="margin: 30px;">
    <div style="padding: 15px 0px;">
        <h1 class="text-dark mb-1">Delete Photo</h1>
        <div class="mb-3">
            <h3><strong><u>Are you sure you want to delete this?</u></strong></h3>
        </div>
        <hr />
    </div>

    <div>
        <div class="row" style="margin: 0px;padding: 15px;">
            <div class="col-md-6 d-xl-flex justify-content-xl-start align-items-xl-center">
                <a class="btn btn-primary justify-content-center align-items-center"
                   asp-action="Index">
                    <i class="fa fa-arrow-left"></i>&nbsp;Back
                </a>
            </div>
        </div>

        <div class="row" style="margin: 0px;padding: 15px;">
            <div class="col">
                <h2 class="text-dark mb-1">@(Model.Title)</h2>
            </div>
        </div>

        <div class="row" style="margin: 0px;padding: 0px 15px;">
            <div class="col-md-6">
                <hr>
                @*Description*@
                <h5 class="text-dark d-lg-flex align-items-lg-center" style="margin-bottom: 8px;">
                    <strong>Description</strong>
                </h5>
                <p style="font-size: 16px;margin: 0px;">@(Model.Description)</p>
                <hr>
                @*Picture owner*@
                <h5 class="text-dark d-lg-flex align-items-lg-center" style="height: 25px;margin-bottom: 8px;">
                    <strong>Captured By</strong>
                </h5>
                <label class="form-label">@(Model.Owner)</label>
                <hr>

                @*Captured Date*@
                <h5 class="text-dark d-lg-flex align-items-lg-center" style="height: 25px;margin-bottom: 8px;">
                    <strong>Captured Date</strong>
                </h5>
                <label class="form-label">@(Model.CapturedDate.ToShortDateString())</label>
            </div>

            <div class="col-md-6">
                <div class="d-lg-flex justify-content-lg-center align-items-lg-center" style="width: 100%;">
                    <img class="d-lg-flex" style="width: 100%;min-height: 100%;" src="@("~/imageTest/"+ Model.ImageName) " asp-append-version="true">
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="GalleryItemId" />
        <input type="submit" value="Delete" class="btn btn-primary" />
    </form>

</div>
