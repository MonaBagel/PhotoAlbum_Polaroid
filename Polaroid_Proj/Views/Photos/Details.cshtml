@model Polaroid_Proj.Models.Gallery.PhotoModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section>

    <div id="content" style="margin: 30px;">
        <div style="padding: 15px;">
            <h1 class="text-dark mb-1">View Photo Details</h1>
            <hr />
        </div>

        <div>
            <div class="row" style="margin: 0px;padding: 15px;">
                <div class="col-md-6 d-xl-flex justify-content-xl-start align-items-xl-center">
                    <a class="btn btn-primary justify-content-center align-items-center"
                       asp-action="Index">
                        <i class="fa fa-arrow-left"></i>&nbsp;Back
                    </a>
                </div>

                <div class="col-md-6 d-flex d-md-flex d-xl-flex justify-content-center align-items-center justify-content-sm-start justify-content-md-end align-items-md-center justify-content-xl-end">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" aria-expanded="false" data-bs-toggle="dropdown" type="button">
                            <i class="fa fa-gear"></i>&nbsp;Settings
                        </button>
                        <div class="dropdown-menu" style="font-size: 16px;">
                            @*Edit photo*@
                            <a class="dropdown-item" id="edit-photo"
                               asp-action="Edit" asp-route-id="@Model.GalleryItemId">
                                <i class="fa fa-pencil"></i>&nbsp;Edit Photo
                            </a>
                            @*Delete photo*@
                            <a class="dropdown-item" id="delete-photo"
                               asp-action="Delete" asp-route-id="@Model.GalleryItemId">
                                <i class="fa fa-trash"></i>&nbsp;Delete Photo
                            </a>
                            @*Download photo*@
                            <a class="dropdown-item" id="download-photo"
                               asp-action="Download" asp-route-fileName="@Model.ImageName">
                                <i class="fa fa-download"></i>&nbsp;Download Photo
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row" style="margin: 0px;padding: 15px;">
                <div class="col">
                    <h2 class="text-dark mb-1">@(Model.Title)</h2>
                </div>
            </div>

            <div class="row" style="margin: 0px;padding: 0px 15px;">
                <div class="col-md-6">
                    <hr>
                    @*Description*@
                    <h5 class="text-dark d-lg-flex align-items-lg-center" style="margin-bottom: 8px;">
                        <strong>Description</strong>
                    </h5>
                    <p style="font-size: 16px;margin: 0px;">@(Model.Description)</p>
                    <hr>
                    @*Picture owner*@
                    <h5 class="text-dark d-lg-flex align-items-lg-center" style="height: 25px;margin-bottom: 8px;">
                        <strong>Captured By</strong>
                    </h5>
                    <label class="form-label">@(Model.Owner)</label>
                    <hr>

                    @*Captured Date*@
                    <h5 class="text-dark d-lg-flex align-items-lg-center" style="height: 25px;margin-bottom: 8px;">
                        <strong>Captured Date</strong>
                    </h5>
                    <label class="form-label">@(Model.CapturedDate.ToShortDateString())</label>
                </div>

                <div class="col-md-6">
                    <div class="d-lg-flex justify-content-lg-center align-items-lg-center" style="width: 100%;">
                        <img class="d-lg-flex" style="width: 100%;min-height: 100%;" src="@("~/imageTest/"+ Model.ImageName) " asp-append-version="true">
                    </div>
                </div>
            </div>
        </div>

    </div>

</section>

