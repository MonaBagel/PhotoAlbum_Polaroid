@model IEnumerable<Polaroid_Proj.Models.Gallery.PhotoModel>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section>

    <div id="content" style="margin: 30px;">

        <div style="padding: 15px;">
            <h1 class="text-dark mb-1">Photos&nbsp;</h1>
            <hr />
        </div>

        <div>
            <div class="row" style="margin: 0px;padding: 15px;">
                <div class="col-md-6 d-sm-flex d-md-flex d-lg-flex d-xl-flex align-items-sm-center align-items-md-center align-items-lg-center justify-content-xl-start align-items-xl-center">
                    <form asp-action="Index">
                        <div class="input-group mb-3">
                            <input name="SearchValue" class="form-control" placeholder="Search ...">
                            <button class="btn btn-outline-secondary" type="submit" id="search-btn">
                                <i class="fa">&#xf002;</i>
                            </button>
                        </div>
                    </form>
                </div>

                <div class="col-md-6 d-flex d-md-flex d-xl-flex justify-content-center align-items-center justify-content-sm-start justify-content-md-end align-items-md-center justify-content-xl-end" style="padding: 0px;">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" aria-expanded="false" data-bs-toggle="dropdown" id="upload-btn" type="button"><i class="fa fa-upload"></i>&nbsp;Upload</button>
                        <div class="dropdown-menu" style="font-size: 16px;">
                            <a class="dropdown-item" id="upload-single" asp-action="Create">
                                <i class="fa fa-photo"></i>&nbsp;Upload A Photo
                            </a>
                        </div>
                    </div>
                </div>

                <div class="row d-flex justify-content-center align-items-center justify-content-md-start justify-content-lg-start" style="margin: 0px;padding: 15px;">

                    @foreach (var item in Model)
                     {
                        <div class="col-md-6 col-lg-4" style="padding:12px;">
                            <div class="card d-flex d-sm-flex d-md-flex d-lg-flex d-xl-flex d-xxl-flex justify-content-center align-items-center justify-content-sm-center align-items-sm-center justify-content-md-center align-items-md-center justify-content-lg-center align-items-lg-center justify-content-xl-center align-items-xl-center justify-content-xxl-center align-items-xxl-center"
                                 style="border-radius: 0px;box-shadow: 0px 0px 20px #757980;border-width: 20px;border-color: rgb(255,255,255);border-bottom-width: 0px;">

                                <div class="col-sm-10">
                                    <img src="@("~/imageTest/"+ item.ImageName) " asp-append-version="true" width="100%" height="230px" />
                                </div>

                                <div class="card-body" style="padding: 10px;">
                                    <div>
                                        <h3 class="text-center card-title" style="margin: 0px;">@(item.Title)</h3>
                                    </div>
                                    <div class="d-flex d-lg-flex justify-content-center align-items-center justify-content-lg-center align-items-lg-center social-icons" style="padding: 10px;font-size: 14px;">
                                        @*View Photo btn*@
                                        <a data-bs-toggle="tooltip" data-bss-tooltip=""
                                           asp-action="Details" asp-route-id="@item.GalleryItemId"
                                           style="color: rgba(14,160,255,0);"
                                           title="View Photo">
                                            <i class="fa fa-eye d-flex d-lg-flex justify-content-center align-items-center justify-content-lg-center align-items-lg-center"
                                               style="font-size: 16px;width: 40px;height: 40px;color: #757980;" title="View Photo">
                                            </i>
                                        </a>
                                        @*Edit Photo btn*@
                                        <a class="d-flex justify-content-center align-items-center" data-bs-toggle="tooltip" data-bss-tooltip=""
                                           asp-action="Edit" asp-route-id="@item.GalleryItemId"
                                           style="color: rgba(14,160,255,0);"
                                           title="Edit Photo">
                                            <i class="fa fa-pencil d-flex d-lg-flex justify-content-center align-items-center justify-content-lg-center align-items-lg-center" style="font-size: 16px;width: 40px;height: 40px;color: #757980;"
                                               title="Edit Photo">
                                            </i>
                                        </a>
                                        @*Delete Photo btn*@
                                        <a class="d-flex justify-content-center align-items-center" data-bs-toggle="tooltip" data-bss-tooltip=""
                                           asp-action="Delete" asp-route-id="@item.GalleryItemId"
                                           style="color: rgba(14,160,255,0);"
                                           title="Delete Photo">
                                            <i class="fa fa-trash d-flex d-lg-flex justify-content-center align-items-center justify-content-lg-center align-items-lg-center" style="font-size: 16px;width: 40px;height: 40px;color: #757980;"
                                               title="Delete Photo">
                                            </i>
                                        </a>

                                        @*Download Function*@
                                        <a data-bs-toggle="tooltip" data-bss-tooltip="" 
                                           asp-action="Download" asp-route-fileName="@item.ImageName"
                                           style="color: rgba(14,160,255,0);" 
                                           title="Download">
                                            <i class="fa fa-download d-flex d-lg-flex justify-content-center align-items-center justify-content-lg-center align-items-lg-center" style="font-size: 16px;width: 40px;height: 40px;color: rgb(116,121,128);"
                                               title="Download">
                                            </i>

                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                     }

                </div>
            </div>
        </div>
    </div>
</section>



