@model IEnumerable<Polaroid_Proj.Models.Gallery.PhotoModel>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<form asp-action="Index">

    <div class="input-group mb-3">
        <input name="SearchValue" class="form-control" placeholder="Search ...">
        <button class="btn btn-outline-secondary" type="submit" id="search-btn">
            <i class="fa">&#xf002;</i>
        </button>
    </div>

</form>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.Album)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.CapturedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageName)
            </td>
@*            <td>
                @Html.DisplayFor(modelItem => item.Album.Discriminator)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.CapturedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GalleryItemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GalleryItemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GalleryItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


