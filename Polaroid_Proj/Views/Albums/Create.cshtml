@model Polaroid_Proj.Models.Gallery.AlbumModel

@{
    ViewData["Title"] = "Create Album";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section>
    <div id="content" style="margin: 30px;">
        <div style="padding: 15px;">
            <h1 class="text-dark mb-1">Create A New Album</h1>
            <hr />
        </div>

        <div>
            <div class="row" style="margin: 0px;padding: 15px;">
                <div class="col-md-6 d-xl-flex justify-content-xl-start align-items-xl-center">
                    <a class="btn btn-primary justify-content-center align-items-center"
                       asp-action="Index">
                        <i class="fa fa-arrow-left"></i>&nbsp;Back
                    </a>
                </div>
            </div>

            <div class="row" style="margin: 0px;padding: 15px;">
                <div class="col-md-6 d-xl-flex justify-content-xl-start align-items-xl-center">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
