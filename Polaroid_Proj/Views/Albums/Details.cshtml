@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section>

    <div id="content" style="margin: 30px;">
        <div style="padding: 15px;">
            <h1 class="text-dark mb-1">View Album - @(Model.Title)</h1>
            <hr />
        </div>

        <div>
            <div class="row" style="margin: 0px;padding: 15px;">
                <div class="col-md-6 d-xl-flex justify-content-xl-start align-items-xl-center">
                    <a class="btn btn-primary justify-content-center align-items-center"
                       asp-action="Index">
                        <i class="fa fa-arrow-left"></i>&nbsp;Back
                    </a>
                </div>

                <div class="col-md-6 d-flex d-md-flex d-xl-flex justify-content-center align-items-center justify-content-sm-start justify-content-md-end align-items-md-center justify-content-xl-end">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" aria-expanded="false" data-bs-toggle="dropdown" type="button">
                            <i class="fa fa-gear"></i>&nbsp;Settings
                        </button>
                        <div class="dropdown-menu" style="font-size: 16px;">
                            @*Edit photo*@
                            <a class="dropdown-item" id="edit-photo"
                               asp-action="Edit" asp-route-id="@Model.GalleryItemId">
                                <i class="fa fa-pencil"></i>&nbsp;Edit Album
                            </a>
                            @*Delete photo*@
                            <a class="dropdown-item" id="delete-photo"
                               asp-action="Delete" asp-route-id="@Model.GalleryItemId">
                                <i class="fa fa-trash"></i>&nbsp;Delete Album
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row" style="margin: 0px;padding: 15px;">
                <div class="col-md-6">
                    <div style="font-family: Montserrat, sans-serif;">
                        <hr>
                        <h5 class="text-dark d-lg-flex align-items-lg-center" style="margin-bottom: 8px;">
                        <strong>Description</strong></h5>
                        <p style="font-size: 16px;margin: 0px;">@(Model.Description)</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <hr>
                    <h6 class="text-dark d-lg-flex align-items-lg-center" style="margin-bottom: 8px;">
                        <strong>Captured Date</strong>
                    </h6>
                    <label class="form-label">@(Model.CapturedDate.ToShortDateString())</label>

                </div>
            </div>
        </div>

    </div>

</section>


